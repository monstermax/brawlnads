{
  "name": "brawlnads",
  "version": "1.0.0",
  "description": "BrawlNads - A Monad-based NFT battle royale game with fully onchain SVG NFTs",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy:local": "npx hardhat run scripts/deploy.ts --network localhost",
    "deploy:testnet": "npx hardhat run scripts/deploy.ts --network testnet",
    "deploy:mainnet": "npx hardhat run scripts/deploy.ts --network mainnet",
    "verify:testnet": "npx hardhat run scripts/verify.ts --network monad_testnet",
    "node": "npx hardhat node",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build"
  },
  "keywords": [
    "blockchain",
    "nft",
    "game",
    "battle-royale",
    "monad",
    "solidity",
    "web3"
  ],
  "author": "BrawlNads Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "^4.9.0",
    "ethers": "^6.0.0",
    "hardhat": "^2.17.0"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.9",
    "@nomicfoundation/hardhat-ethers": "^3.0.9",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.13",
    "@nomicfoundation/hardhat-verify": "^2.0.14",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "chai": "^5.2.0",
    "dotenv": "^16.0.0",
    "hardhat-gas-reporter": "^2.3.0",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.8.3"
  }
}
